---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import svgReference from "../../public/logo.svg";
import { Icon } from "astro-icon";
---

<Layout title="Fergus Lai">
    <main class="flex h-screen w-screen items-center justify-center">
        <div class="flex">
            <img src={svgReference.src} class="h-48 w-48" alt="logo" />
            <div class="flex h-48 flex-col justify-between">
                <div class="flex flex-col">
                    <div class="text-2xl font-bold text-slate-50">
                        Fergus Lai
                    </div>
                    <a
                        class="transistion text-lg text-zinc-50 hover:translate-x-1 hover:scale-110 hover:underline focus:underline"
                        href="/blog">Blog</a
                    >
                    <a
                        class="transistion text-lg text-zinc-50 hover:translate-x-1 hover:scale-110 hover:underline focus:underline"
                        href="/projects">Projects</a
                    >
                    <a
                        class="transistion text-lg text-zinc-50 hover:translate-x-1 hover:scale-110 hover:underline focus:underline"
                        href="/info">Info</a
                    >
                </div>
                <div class="flex h-8 w-full flex-row gap-2">
                    <a
                        class="transistion h-8 w-8 text-zinc-50 hover:scale-110"
                        href="https://github.com/Fergus-Lai"
                        ><Icon name="mdi:github" /></a
                    >
                    <a
                        class="transistion h-8 w-8 text-zinc-50 hover:scale-110"
                        href="https://www.linkedin.com/in/fergus-lai/"
                        ><Icon name="mdi:linkedin" /></a
                    >
                </div>
            </div>
        </div>
    </main>
</Layout>
